<h1>Listing items</h1>

<table class="table table-striped">
  <tr>
    <th>Book</th>
    <th>List</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.book.name %></td>
    <td><%= item.list.name %></td>
    <td><button class="btn"><%= link_to 'Show', item %></button></td>
    <td><button class="btn"><%= link_to 'Edit', edit_item_path(item) %></button></td>
    <td><button class="btn"><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></button></td>
  </tr>
<% end %>
</table>

